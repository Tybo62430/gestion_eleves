{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <form method="post">

            <div class="row">

                <div class="form-group col" action="{{ path("nombredejour") }}">

                    <label for="DateDebut"> Date Debut :</label>
                    <input type="date" class="form-control" id="DateDebut" name="DateDebut" value="{% if nombredejour != null %}{{datedebut}}{% endif %}">

                </div>

                <div class="form-group col">
                    <label for="DateFin">Date Fin :</label>
                    <input type="date" class="form-control" id="DateFin" name="DateFin" value="{% if nombredejour != null %}{{datefin}}{% endif %}">
                </div>

            </div>

            <button type="submit" class="btn btn-primary">valider</button>

        </form>
        {% if nombredejour != null %}                      
            <p class="text-center">Il y a <b>{{ nombredejour }}</b> jour(s) Férié(s) entre le  <b>{{ datedebut | date("d/m/Y") }}</b> et le  <b>{{ datefin | date("d/m/Y") }}</b> </p>
        {% endif %}

    </div>

{% endblock %}
