{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Etudiant</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ etudiant.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ etudiant.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ etudiant.prenom }}</td>
                </tr>
                <tr>
                    <th>Datedenaissance</th>
                    <td>{% if etudiant.dateDeNaissance %}{{ etudiant.dateDeNaissance|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ etudiant.adresse }}</td>
                </tr>
                <tr>
                    <th>Codepostal</th>
                    <td>{{ etudiant.codePostal }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ etudiant.ville }}</td>
                </tr>
                <tr>
                    <th>Commentaire</th>
                    <td>{{ etudiant.commentaire }}</td>
                </tr>
            </tbody>
        </table>

        <table class="table">
            <tbody>
                <tr>
                    <th>Note</th>
                    {% for note in notesEtudiant %}
                    <td>{{ note.matiere.libelle ~': '~ note.note}}</td>
                    {% endfor %}
                </tr>
            </tbody>
        </table>


        <ul>
            <li>
                <a href="{{ path('etudiant_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('etudiant_edit', { 'id': etudiant.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>

    </div>
{% endblock %}
